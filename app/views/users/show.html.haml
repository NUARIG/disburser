- content_for(:title) do
  User

#user
  .user_header
    %h4
      Profile
  .user
    .row
      .username
        %div{class: 'small-10 large-4 columns' }
          %label
            Username
        %div{class: 'small-14 large-20 columns' }
          = @user.username
    .row
      .first_name
        %div{class: 'small-10 large-4 columns' }
          %label
            First Name
        %div{class: 'small-14 large-20 columns' }
          = @user.first_name
    .row
      .last_name
        %div{class: 'small-10 large-4 columns' }
          %label
            Last Name
        %div{class: 'small-14 large-20 columns' }
          = @user.last_name
    .row
      .email
        %div{class: 'small-10 large-4 columns' }
          %label
            Email
        %div{class: 'small-14 large-20 columns' }
          = @user.email
    .row
      .actions{class: 'small-24 columns' }
        - if user_type?(@user, ExternalUser)
          = link_to 'Edit', edit_external_user_registration_url, class: 'button'